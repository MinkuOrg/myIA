@model IEnumerable<InternalAudit.Models.NoonMealPdlForm13>
@using InternalAudit.Common;
@using Newtonsoft.Json;
@{ int rowNo = 0; }
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Internal.cshtml";
}

@if (ViewData["Msg"] != null)
{
    InternalAudit.DTO.MessageDTO msg = ViewData["Msg"] as InternalAudit.DTO.MessageDTO;
    @await Html.PartialAsync("~/Views/Shared/_ShowMsg.cshtml", msg);
}

<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
@*<link href="~/css/dataTables.material.min.css" rel="stylesheet" />*@
<link href="~/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Noon Meal Pdl Form 13</h4>
                        <p class="card-category">Details of sanctioned & filled up posts of Staff…… (Month/Year)</p>
                        @Html.ActionLink("ADD", "Create", "NoonMealForm13", null, new { @class = "btn btn-default pull-right", style = "margin-top: -49px;" })
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="mytable" width="100%" class="a display table table-bordered  text-center">
                                <thead class="thead-light">
                                    <tr>

                                        <th>Sr.No</th>
                                        <th>Subject</th>
                                        <th>AsstDirector</th>
                                        <th>Inspector</th>
                                        <th>DeputyInspector</th>
                                        <th>AssistantInspector</th>
                                        <th>JuniorAssistant</th>
                                        <th>Typist</th>
                                        <th>RecordClerk</th>
                                        <th>OfficeAssistant</th>
                                        <th>FinancialYear</th>
                                        <th>PeriodCategory</th>
                                        <th>Period</th>
                                        <th>Operation</th>
                                    </tr>
                                </thead>
                                @foreach (var item in @Model)
                                {
                                    <tr>
                                        <th>
                                            @(rowNo += 1)
                                        </th>
                                        <td>@item.Subject</td>
                                        <td>@item.AsstDirector</td>
                                        <td>@item.Inspector</td>
                                        <td>@item.DeputyInspector</td>
                                        <td>@item.AssistantInspector</td>
                                        <td>@item.JuniorAssistant</td>
                                        <td>@item.Typist</td>
                                        <td>@item.RecordClerk</td>
                                        <td>@item.OfficeAssistant</td>
                                        <td>@item.FinancialYearName</td>
                                        <td>@item.PeriodCategoryName</td>
                                        <td>@item.PeriodName</td>
                                        <td>
                                            <a asp-action="Edit" asp-controller="NoonMealForm13" asp-route-id="@item.NoonMealRecNo" title="Edit"><i class="material-icons">build</i></a>
                                            <a asp-action="delete" asp-controller="NoonMealForm13" asp-route-id="@item.NoonMealRecNo" title="Delete"><i class="material-icons">delete</i></a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery.min.js"></script>
@*<script src="~/js/dataTables.material.min.js"></script>*@
<script src="~/js/dataTables.jqueryui.js"></script>
<script>
    $(document).ready(function () {
        $('.a').DataTable();

    });
</script>
