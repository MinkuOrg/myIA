@model IEnumerable<InternalAudit.Models.TblMasterFinancialyear>
@using InternalAudit.Common;
@using Newtonsoft.Json;
@{ int rowNo = 0;}
@{
    ViewData["Title"] = "GetFinancial_Year";
    Layout = "~/Views/Shared/Internal.cshtml";
}

@if (ViewData["Msg"] != null)
{
    InternalAudit.DTO.MessageDTO msg = ViewData["Msg"] as InternalAudit.DTO.MessageDTO;
    @await Html.PartialAsync("~/Views/Shared/_ShowMsg.cshtml", msg);
}
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
@*<link href="~/css/dataTables.material.min.css" rel="stylesheet" />*@
<link href="~/css/dataTables.jqueryui.min.css" rel="stylesheet" />
<link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Financial Year</h4>
                        <p class="card-category">Financial Year List </p>
                        @Html.ActionLink("ADD", "Financial_Year", "Financial_Year", null, new { @class = "btn btn-default pull-right", style = "margin-top: -49px;" })
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="mytable" width="100%" class="a display table table-bordered  text-center">
                                <thead class="text-primary">
                                <th>Sr.No</th>
                                <th>Financial Year</th>
                                <th>Operations</th>
                                </thead>
                                @foreach (var item in @Model)
                                {
                                    <tr>
                                        <td>@(rowNo += 1)</td>
                                        <td>@item.FinancialYear</td>

                                        <td>
                                            <a asp-action="EditFinancial_Year" asp-controller="Financial_Year" asp-route-id="@item.FinancialYearRecNo">Edit</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery.min.js"></script>
@*<script src="~/js/dataTables.material.min.js"></script>*@
<script src="~/js/dataTables.jqueryui.js"></script>
<script>
    $(document).ready(function () {
        $('.a').DataTable();

    });
</script>


