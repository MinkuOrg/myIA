@model InternalAudit.Models.Annexure3FormA

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Internal.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <div class="row">
                            <div class="col-md-8">
                                <h4 class="card-title"></h4>
                            </div>
                            <div class="col-md-4">
                                @Html.ActionLink("Back", "Index", "Annexure3A", null, new { @class = "btn btn-default pull-right" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row">
                                <div class="form-group col-6">
                                    <label asp-for="AdministrativeDepartment" class="control-label">Administrative Department</label>
                                    <input asp-for="AdministrativeDepartment" class="form-control" />
                                    <span asp-validation-for="AdministrativeDepartment" class="text-danger"></span>
                                </div>
                                <div class="form-group col-6">
                                    <label asp-for="InstitutionDetails" class="control-label">Institution Details</label>
                                    <input asp-for="InstitutionDetails" class="form-control" />
                                    <span asp-validation-for="InstitutionDetails" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-6">
                                    <label asp-for="Pendency2013To14" class="control-label">Pendency Details 2013-14</label>
                                    <input asp-for="Pendency2013To14" class="form-control" />
                                    <span asp-validation-for="Pendency2013To14" class="text-danger"></span>
                                </div>
                                <div class="form-group col-6">
                                    <label asp-for="Pendency2014To15" class="control-label">Pendency Details 2014-15</label>
                                    <input asp-for="Pendency2014To15" class="form-control" />
                                    <span asp-validation-for="Pendency2014To15" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-6">
                                    <label asp-for="Pendency2015To16" class="control-label">Pendency Details 2015-16</label>
                                    <input asp-for="Pendency2015To16" class="form-control" />
                                    <span asp-validation-for="Pendency2015To16" class="text-danger"></span>
                                </div>
                                <div class="form-group col-6">
                                    <label asp-for="Pendency2016To17" class="control-label">Pendency Details 2016-17</label>
                                    <input asp-for="Pendency2016To17" class="form-control" />
                                    <span asp-validation-for="Pendency2016To17" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row col-12" style="justify-content:center">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (ViewData["Msg"] != null)
    {
        InternalAudit.DTO.MessageDTO msg = ViewData["Msg"] as InternalAudit.DTO.MessageDTO;
        @await Html.PartialAsync("~/Views/Shared/_ShowMsg.cshtml", msg);
    }
    <script src="~/js/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.js" integrity="sha256-it5nQKHTz+34HijZJQkpNBIHsjpV8b6QzMJs9tmOBSo=" crossorigin="anonymous"></script>
