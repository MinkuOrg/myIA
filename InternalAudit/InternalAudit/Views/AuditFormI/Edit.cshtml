@model InternalAudit.Models.AuditPdlFormI

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Internal.cshtml";
}

<script src="~/js/jquery.min.js"></script>
@if (ViewData["Msg"] != null)
{
    InternalAudit.DTO.MessageDTO msg = ViewData["Msg"] as InternalAudit.DTO.MessageDTO;
    @await Html.PartialAsync("~/Views/Shared/_ShowMsg.cshtml", msg);
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <div class="row">
                            <div class="col-md-5">
                                <h4 class="card-title">
                                    Details of Institutions in which audit is pending for long time (Till Year )(This Form should
                                    be sent once in a year i.e. in January)
                                </h4>
                            </div>
                            <div class="col-md-7">
                                @Html.ActionLink("Back", "Index", "AuditFormI", null, new { @class = "btn btn-default pull-right" })
                            </div>
                        </div>
                    </div><br />
                    <form asp-action="Edit">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="AuditPdlFormIrecNo" />
                            <div class="form-row">
                                <div class="form-group col-6 col-6">
                                    <label asp-for="FinancialYear" class="control-label">Select Period Category</label>
                                    <select asp-for="FinancialYear" class="form-control" asp-items="@(new SelectList(@ViewBag.ListOfFinancialYear, "FinancialYearRecNo", "FinancialYear"));">
                                        <option value="Select">Select</option>
                                    </select>
                                </div>
                                <div class="form-group col-6 col-6">
                                    <label asp-for="District" class="control-label">Select Period Category</label>
                                    <select asp-for="District" id="PeriodCategory" class="form-control" asp-items="@(new SelectList(@ViewBag.ListOfDistrict, "DistrictRecNo", "DistrictName"));">
                                        <option value="Select">Select</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-6 ">
                                    <label asp-for="Institutions" class="control-label"></label>
                                    <select asp-for="Institutions" class="form-control" asp-items="@(new SelectList(@ViewBag.ListOfInstitutions, "InstitutionsRecNo", "InstitutionsName"));">
                                        <option value="Select">Select</option>
                                    </select>
                                </div>
                                <div class="form-group col-6">
                                    <label asp-for="CentreInstitutionDetails" class="control-label"></label>
                                    <input asp-for="CentreInstitutionDetails" class="form-control" />
                                    <span asp-validation-for="CentreInstitutionDetails" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-6">
                                    <label asp-for="PendencyReasons" class="control-label"></label>
                                    <input asp-for="PendencyReasons" class="form-control" />
                                    <span asp-validation-for="PendencyReasons" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row col-12" style="justify-content:center">
                                <input type="submit" value="Update" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-1.10.2.js" integrity="sha256-it5nQKHTz+34HijZJQkpNBIHsjpV8b6QzMJs9tmOBSo=" crossorigin="anonymous"></script>
